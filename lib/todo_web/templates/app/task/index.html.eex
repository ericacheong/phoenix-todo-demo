<h2>Listing Tasks for <%= @user.name %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Completed</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for task <- @tasks do %>
    <tr>
      <td><%= task.content %></td>
      <td><%= task.completed %></td>

      <td class="text-right">
        <span><%= link "Show", to: app_task_path(@conn, :show, task), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: app_task_path(@conn, :edit, task), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: app_task_path(@conn, :delete, task), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Task", to: app_task_path(@conn, :new) %></span>
